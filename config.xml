<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
id = "de.birds.XuanThuy"
version = "0.1.3"
versionCode = "3">

	<name>Xuan Thuy Birds</name>
	<description>Gibt ne ganze menge VÃ¶gel hier! Xuan Thuy</description>
	<author href="https://github.com/Xalas11" email="mildenberger.robert@googlemail.com">Robert Mildenberger</author>
	<!-- PLATFORM SELECTION -->
	<platform name="android">
		<icon src="res/android/36mdpi.png" density="ldpi" />
		<icon src="res/android/48mdpi.png" density="mdpi" />
		<icon src="res/android/72hdpi.png" density="hdpi" />
		<icon src="res/android/96xhdpi.png" density="xhdpi" />
		<icon src="res/android/144xxhdpi.png" density="xxhdpi" />
		<icon src="res/android/192xxxhdpi.png" density="xxxhdpi" />
		<splash src="res/android/320x480mdpi.png" density="port-mdpi" />
		<splash src="res/android/480x800hdpi.png" density="port-hdpi" />
		<splash src="res/android/720x1280xhdpi.png" density="port-xhdpi" />
		<splash src="res/android/960x1600xxhdpi.png" density="port-xxhdpi" />
		<splash src="res/android/1280x1920xxxhdpi.png" density="port-xxxhdpi" />
		
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-targetSdkVersion" value="22" /> <!-- targeting Android 5.0 -->
		<preference name="android-installLocation" value="auto" />
		<preference name="android-windowSoftInputMode" value="stateHidden|adjustResize" />
		
		<preference name="SplashScreen" value="screen" />
		<preference name="SplashScreenDelay" value="2000" />
		<preference name="SplashMaintainAspectRatio" value="flase" />
	</platform>
	<!-- GENERAL PREFERENCES -->
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<!-- remove the upper bar on iOS and Android -->

	<!-- ANDROID PREFERENCES -->
	<preference name="load-url-timeout" value="20000" />
	<access origin="*" />
</widget>
